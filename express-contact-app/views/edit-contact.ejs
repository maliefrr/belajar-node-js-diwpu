<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h1>Form Edit Data Contact</h1>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% error.forEach(error => { %>
                            <li><%= error.msg %> </li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <form action="/contact/update" method="POST">
                <input type="hidden" value="<%= (contact.oldName) ? contact.oldName : contact.nama%>" name="oldName">
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama</label>
                    <input type="text" class="form-control" id="nama" name="nama" value="<%=contact.nama%>" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%=contact.email%>" required>
                </div>
                <div class="mb-3">
                    <label for="nohp" class="form-label">Nomor HP</label>
                    <input type="text" class="form-control" id="nohp" name="nohp" value="<%=contact.nohp%>" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>